# Encode label column


def sentiment_encoder(data):
    # Changes the string in the dataframe to integer
    if data == "positive"
        data = 2
    elif data == "negative"
        data = 0
    elif data == "neutral"
        data = 1
    else:
        data = None
    endif 
    return data
endfunction


dfcsv[{column}] = dfcsv[{column}].apply(sentiment_encoder)
dfscv.dropna() # Remove any null values returned 

